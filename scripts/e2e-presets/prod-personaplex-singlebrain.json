{
  "version": 1,
  "id": "prod-personaplex-singlebrain",
  "description": "Production-live Jitsi E2E: botA publishes deterministic stimulus, botB uses PersonaPlex (strict).",
  "stimulus": {
    "mode": "tone"
  },
  "timeouts": {
    "totalMs": 240000,
    "joinMs": 90000,
    "recvMs": 120000,
    "stabilityMs": 20000
  },
  "gates": {
    "enabled": [
      "JOIN_GATE",
      "STABILITY_GATE",
      "STIMULUS_PUBLISH_GATE",
      "PERSONAPLEX_GATE"
    ],
    "personaplexFailurePolicy": "degraded"
  },
  "bots": {
    "a": {
      "role": "stimulus",
      "personaId": "default",
      "conversationBackend": "asr-llm-tts",
      "asrProvider": "stub",
      "modelProvider": "stub",
      "ttsProvider": "stub"
    },
    "b": {
      "role": "full",
      "personaId": "default",
      "conversationBackend": "personaplex"
    }
  }
}

