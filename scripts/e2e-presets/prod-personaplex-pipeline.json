{
  "version": 1,
  "id": "prod-personaplex-pipeline",
  "description": "E2E: Bot A (Alex) uses real ASR→LLM→TTS, Bot B (Jamie) uses PersonaPlex. One PersonaPlex instance; Alex injects stimulus then can respond with pipeline; Jamie responds with PersonaPlex (or fallback).",
  "stimulus": {
    "mode": "tone"
  },
  "timeouts": {
    "totalMs": 240000,
    "joinMs": 90000,
    "recvMs": 120000,
    "stabilityMs": 20000
  },
  "gates": {
    "enabled": [
      "JOIN_GATE",
      "STABILITY_GATE",
      "STIMULUS_PUBLISH_GATE",
      "PERSONAPLEX_GATE"
    ],
    "personaplexFailurePolicy": "degraded"
  },
  "bots": {
    "a": {
      "role": "stimulus",
      "personaId": "default",
      "conversationBackend": "asr-llm-tts",
      "asrProvider": "openai",
      "modelProvider": "openai",
      "ttsProvider": "google"
    },
    "b": {
      "role": "full",
      "personaId": "default",
      "conversationBackend": "personaplex"
    }
  }
}
